<style>
	/* Snow Animation for Main */
	.snow-main {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
	}

	@keyframes snowfall-main {
		0% {
			transform: translateY(-50px) translateX(0) rotate(0deg);
			opacity: 0;
		}
		2% {
			opacity: 0.9;
		}
		98% {
			opacity: 0.9;
		}
		100% {
			transform: translateY(300vh) translateX(80px) rotate(360deg);
			opacity: 0;
		}
	}

	.snowflake-main {
		position: absolute;
		top: -50px;
		width: var(--size, 24px);
		height: var(--size, 24px);
		font-size: var(--size, 24px);
		color: rgba(59, 130, 246, 0.95);
		text-shadow:
			0 0 12px rgba(59, 130, 246, 0.9),
			0 0 20px rgba(100, 180, 255, 0.7),
			0 0 30px rgba(59, 130, 246, 0.5),
			0 0 40px rgba(59, 130, 246, 0.3);
		animation: snowfall-main var(--duration, 10s) linear infinite;
		animation-delay: var(--delay, 0s);
		display: flex;
		align-items: center;
		justify-content: center;
		filter: drop-shadow(0 0 8px rgba(59, 130, 246, 0.6));
		will-change: transform, opacity;
	}

	.snowflake-main::before {
		content: "‚ùÖ";
	}

	@media (prefers-reduced-motion: reduce) {
		.snowflake-main {
			animation: none !important;
		}
	}
</style>
