---
const services = [
  {
    id: 'preventivo',
    title: 'Mantenimiento Preventivo',
    description: 'Limpieza profunda y revisión general para evitar fallas y reducir consumo.',
    icon: 'shield-check',
    color: 'blue',
    details: [
      'Limpieza de serpentines con químicos biodegradables.',
      'Limpieza de charola de condensados y drenaje.',
      'Revisión de amperaje y voltaje en componentes.',
      'Lubricación de motores y rodamientos.',
      'Limpieza de filtros de aire y turbina.',
      'Aplicación de tratamiento antibacterial.'
    ],
    images: [
      'https://images.unsplash.com/photo-1621905252507-b35492cc74b4?q=80&w=2069&auto=format&fit=crop',
      'https://images.unsplash.com/photo-1545259741-2ea3ebf61fa3?q=80&w=2070&auto=format&fit=crop',
      'https://images.unsplash.com/photo-1558403194-611308249627?q=80&w=2070&auto=format&fit=crop'
    ],
    delay: '0'
  },
  {
    id: 'reparacion',
    title: 'Reparación de Averías',
    description: 'Diagnóstico preciso y reparación de cualquier tipo de falla técnica.',
    icon: 'wrench',
    color: 'orange',
    details: [
      'Diagnóstico de códigos de error en tarjeta.',
      'Reemplazo de capacitores y contactores.',
      'Cambio de compresores y motores.',
      'Reparación de fugas mediante soldadura.',
      'Corrección de problemas de vibración.'
    ],
    images: [
      'https://images.unsplash.com/photo-1581092160562-40aa08e78837?q=80&w=2070&auto=format&fit=crop',
      'https://images.unsplash.com/photo-1518770660439-4636190af475?q=80&w=2070&auto=format&fit=crop',
      'https://images.unsplash.com/photo-1504328345606-18bbc8c9d7d1?q=80&w=2070&auto=format&fit=crop'
    ],
    delay: '100'
  },
  {
    id: 'instalacion',
    title: 'Instalación Profesional',
    description: 'Instalación de unidades nuevas con estándares de calidad y seguridad.',
    icon: 'plus-square',
    color: 'green',
    details: [
      'Cálculo térmico para capacidad (BTUs).',
      'Instalación estética de tuberías.',
      'Vacío del sistema con bomba (500 micrones).',
      'Conexión eléctrica normativa.',
      'Pruebas de arranque y capacitación.'
    ],
    images: [
      'https://images.unsplash.com/photo-1505775561242-727b7fba20f0?q=80&w=2070&auto=format&fit=crop',
      'https://images.unsplash.com/photo-1595814433015-e6f5ce69614e?q=80&w=2070&auto=format&fit=crop',
      'https://images.unsplash.com/photo-1521207418485-99c705420785?q=80&w=2070&auto=format&fit=crop'
    ],
    delay: '200'
  },
  {
    id: 'carga',
    title: 'Carga de Refrigerante',
    description: 'Recarga de gas para recuperar la máxima potencia de enfriamiento.',
    icon: 'droplets',
    color: 'cyan',
    details: [
      'Medición de presiones (Superheat/Subcooling).',
      'Detección de fugas con nitrógeno.',
      'Carga de gas R410A, R22 o R32.',
      'Verificación de temperaturas.',
      'Sellado de válvulas de servicio.'
    ],
    images: [
      'https://images.unsplash.com/photo-1581092334651-ddf26d9a09d0?q=80&w=2070&auto=format&fit=crop',
      'https://images.unsplash.com/photo-1621905252507-b35492cc74b4?q=80&w=2069&auto=format&fit=crop',
      'https://images.unsplash.com/photo-1581092580497-e0d23cbdf1dc?q=80&w=2070&auto=format&fit=crop'
    ],
    delay: '300'
  }
];

const colorMap = {
  blue: 'text-blue-600 bg-blue-50 border-blue-200 hover:border-blue-500',
  orange: 'text-orange-600 bg-orange-50 border-orange-200 hover:border-orange-500',
  green: 'text-green-600 bg-green-50 border-green-200 hover:border-green-500',
  cyan: 'text-cyan-600 bg-cyan-50 border-cyan-200 hover:border-cyan-500'
};
---

<section id="servicios" class="py-32 relative overflow-hidden">
  <div class="absolute inset-0 dot-pattern opacity-30 pointer-events-none"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-20 reveal">
      <div class="inline-block py-1 px-3 rounded-full bg-blue-50 text-blue-600 text-xs font-bold tracking-widest uppercase mb-4 border border-blue-100">
        Excelencia Técnica
      </div>
      <h2 class="text-4xl md:text-6xl font-black text-slate-900 mb-6 tracking-tight">Soluciones <span class="text-gradient">profesionales</span></h2>
      <p class="text-lg md:text-xl text-slate-600 leading-relaxed">Ofrecemos servicios especializados con los más altos estándares de calidad para garantizar el rendimiento óptimo de tus equipos.</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 lg:gap-10">
      {services.map((service, index) => (
        <article 
          class={`relative glass p-8 md:p-12 rounded-[2.5rem] shadow-sm hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 border-white/60 group reveal reveal-delay-${index * 100} cursor-pointer service-card flex flex-col items-start min-h-[450px] overflow-hidden`}
          data-service={JSON.stringify(service)}
        >
          <!-- Accent Glow -->
          <div class={`absolute -top-12 -right-12 w-40 h-40 rounded-full blur-3xl opacity-20 group-hover:opacity-40 transition-opacity duration-500 ${service.color === 'blue' ? 'bg-blue-400' : service.color === 'orange' ? 'bg-orange-400' : service.color === 'green' ? 'bg-green-400' : 'bg-cyan-400'}`}></div>
          
          <!-- Icon -->
          <div class={`w-20 h-20 rounded-2xl flex items-center justify-center mb-10 transition-all duration-500 group-hover:scale-110 group-hover:rotate-6 shadow-lg shadow-slate-200 ${colorMap[service.color].split(' ').slice(0, 2).join(' ')}`}>
            {service.icon === 'shield-check' && <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/><path d="m9 12 2 2 4-4"/></svg>}
            {service.icon === 'wrench' && <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>}
            {service.icon === 'plus-square' && <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M8 12h8"/><path d="M12 8v8"/></svg>}
            {service.icon === 'droplets' && <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 16.3c2.2 0 4-1.8 4-4 0-3.3-4-6.3-4-6.3S3 9 3 12.3c0 2.2 1.8 4 4 4z"/><path d="M17 16.3c2.2 0 4-1.8 4-4 0-3.3-4-6.3-4-6.3S13 9 13 12.3c0 2.2 1.8 4 4 4z"/></svg>}
          </div>
          
          <h3 class="text-3xl font-black text-slate-900 mb-6 group-hover:text-blue-600 transition-colors tracking-tight">{service.title}</h3>
          <p class="text-slate-600 leading-relaxed mb-auto text-lg">
            {service.description}
          </p>
          
          <button class="w-full mt-12 py-5 rounded-2xl font-bold text-base bg-slate-50 text-slate-600 group-hover:bg-blue-600 group-hover:text-white group-hover:shadow-xl group-hover:shadow-blue-500/20 transition-all flex items-center justify-center gap-2 border border-slate-100 group-hover:border-blue-600">
            Ver Galería de Trabajos
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><path d="m9 18 6-6-6-6"/></svg>
          </button>
        </article>
      ))}
    </div>
  </div>

  <!-- Fullscreen Gallery Modal -->
  <div id="service-modal" class="fixed inset-0 z-[100] hidden opacity-0 transition-opacity duration-300" aria-hidden="true">
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-slate-950/40 backdrop-blur-xl transition-opacity" id="modal-backdrop"></div>
    
    <!-- Modal Content -->
    <div class="absolute inset-0 flex flex-col md:flex-row h-full w-full overflow-hidden" id="modal-panel">
      
      <!-- Left: Large Image Area (Top on mobile, 40% height) -->
      <div class="w-full md:w-3/4 h-[45vh] md:h-full relative bg-slate-900 flex items-center justify-center group shrink-0 shadow-2xl z-10">
         <div class="absolute inset-0 grid-pattern opacity-10 pointer-events-none"></div>
         <img id="modal-main-image" src="" class="w-full h-full object-contain relative z-10 transition-all duration-500" alt="Trabajo realizado" />
         
         <!-- Navigation Overlay -->
         <div class="absolute inset-0 flex items-center justify-between px-6 opacity-100 md:opacity-0 md:group-hover:opacity-100 transition-all duration-300 pointer-events-none z-20">
            <button class="bg-white/10 hover:bg-blue-600 text-white p-3 md:p-4 rounded-2xl backdrop-blur-md transition-all border border-white/10 hover:border-blue-500 pointer-events-auto shadow-xl group/btn" onclick="prevImage()">
               <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="group-hover/btn:-translate-x-1 transition-transform"><path d="m15 18-6-6 6-6"/></svg>
            </button>
            <button class="bg-white/10 hover:bg-blue-600 text-white p-3 md:p-4 rounded-2xl backdrop-blur-md transition-all border border-white/10 hover:border-blue-500 pointer-events-auto shadow-xl group/btn" onclick="nextImage()">
               <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="group-hover/btn:translate-x-1 transition-transform"><path d="m9 18 6-6-6-6"/></svg>
            </button>
         </div>

         <!-- Image Title Overlay (Desktop Only) -->
         <div class="hidden md:block absolute bottom-0 left-0 right-0 bg-linear-to-t from-slate-950 via-slate-950/60 to-transparent p-16 z-20">
            <h3 id="modal-title-desktop" class="text-6xl font-black text-white mb-4 tracking-tight"></h3>
            <p id="modal-description-desktop" class="text-slate-300 text-xl max-w-2xl leading-relaxed"></p>
         </div>
      </div>

      <!-- Right: Thumbnails & Info (Sidebar / Bottom on mobile) -->
      <div class="w-full md:w-1/4 h-[55vh] md:h-full bg-slate-950 md:border-l border-white/5 flex flex-col relative z-20">
         
         <!-- Mobile Title (Visible only on mobile) -->
         <div class="md:hidden p-8 border-b border-white/5 bg-slate-950/50 backdrop-blur-md sticky top-0 z-30">
            <div class="flex justify-between items-start gap-4">
               <div>
                  <h3 id="modal-title-mobile" class="text-2xl font-black text-white mb-2 tracking-tight"></h3>
                  <p id="modal-description-mobile" class="text-slate-400 text-sm leading-relaxed line-clamp-2"></p>
               </div>
               <button id="modal-close" class="text-slate-400 hover:text-white transition-colors bg-white/5 p-2 rounded-xl shrink-0 border border-white/5">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="18" x2="6" y1="6" y2="18"/><line x1="6" x2="18" y1="6" y2="18"/></svg>
               </button>
            </div>
         </div>

         <!-- Desktop Close Button -->
         <div class="hidden md:flex p-8 justify-end">
            <button id="modal-close-desktop" class="text-slate-400 hover:text-white transition-all hover:rotate-90 bg-white/5 hover:bg-red-500/20 p-3 rounded-2xl border border-white/5 hover:border-red-500/50">
               <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="18" x2="6" y1="6" y2="18"/><line x1="6" x2="18" y1="6" y2="18"/></svg>
            </button>
         </div>

         <!-- Gallery & Details -->
         <div class="flex-1 overflow-y-auto px-8 pb-8 pt-4 md:pt-0 custom-scrollbar">
            <h4 class="text-blue-500 text-[10px] font-black uppercase tracking-[0.2em] mb-6">Galería de Evidencias</h4>
            <div class="grid grid-cols-3 md:grid-cols-2 gap-4 mb-10" id="modal-gallery">
               <!-- Injected via JS -->
            </div>

            <!-- Technical Details -->
            <div class="pt-8 border-t border-white/5">
               <h4 class="text-blue-500 text-[10px] font-black uppercase tracking-[0.2em] mb-6">Especificaciones Técnicas</h4>
               <ul id="modal-details-list" class="space-y-4 text-sm text-slate-300">
                  <!-- Injected via JS -->
               </ul>
            </div>
         </div>

         <!-- Footer CTA -->
         <div class="p-8 bg-slate-900/50 backdrop-blur-xl border-t border-white/5">
            <a href="/cotizar" class="block w-full bg-blue-600 text-white font-black py-5 rounded-2xl text-center hover:bg-blue-700 transition-all shadow-xl shadow-blue-500/20 active:scale-95">
               SOLICITAR COTIZACIÓN
            </a>
         </div>
      </div>

    </div>
  </div>

    </div>
  </div>
</section>

<script>
  // Elements
  const cards = document.querySelectorAll('.service-card');
  const modal = document.getElementById('service-modal');
  const closeBtn = document.getElementById('modal-close'); // Mobile close
  const closeBtnDesktop = document.getElementById('modal-close-desktop'); // Desktop close
  
  const modalTitleDesktop = document.getElementById('modal-title-desktop');
  const modalDescDesktop = document.getElementById('modal-description-desktop');
  const modalTitleMobile = document.getElementById('modal-title-mobile');
  const modalDescMobile = document.getElementById('modal-description-mobile');
  
  const modalMainImage = document.getElementById('modal-main-image');
  const modalList = document.getElementById('modal-details-list');
  const modalGallery = document.getElementById('modal-gallery');

  let currentImages = [];
  let currentImageIndex = 0;

  // Open Modal
  cards.forEach(card => {
    card.addEventListener('click', () => {
      const data = JSON.parse(card.getAttribute('data-service'));
      
      // Store state
      currentImages = data.images;
      currentImageIndex = 0;

      // Populate Data
      modalTitleDesktop.innerText = data.title;
      modalDescDesktop.innerText = data.description;
      modalTitleMobile.innerText = data.title;
      modalDescMobile.innerText = data.description;
      updateMainImage();

      // Gallery Grid
      modalGallery.innerHTML = data.images.map((img, idx) => `
        <button onclick="setImage(${idx})" class="aspect-square rounded-xl overflow-hidden border-2 ${idx === 0 ? 'border-blue-500 shadow-lg shadow-blue-500/20' : 'border-white/10'} hover:border-white/50 transition-all opacity-80 hover:opacity-100 focus:outline-none gallery-thumb group/thumb">
          <img src="${img}" class="w-full h-full object-cover group-hover/thumb:scale-110 transition-transform duration-500" />
        </button>
      `).join('');

      // Details List
      modalList.innerHTML = data.details.map(item => `
        <li class="flex items-start gap-4 p-4 rounded-2xl bg-white/5 border border-white/5 group/item hover:bg-white/10 transition-colors">
          <div class="w-6 h-6 rounded-lg bg-blue-500/20 flex items-center justify-center shrink-0 mt-0.5 group-hover/item:bg-blue-500 transition-colors">
            <svg class="w-4 h-4 text-blue-500 group-hover/item:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg>
          </div>
          <span class="leading-relaxed">${item}</span>
        </li>
      `).join('');

      // Show Modal
      modal.classList.remove('hidden');
      setTimeout(() => {
        modal.classList.remove('opacity-0');
      }, 10);
      document.body.style.overflow = 'hidden';
    });
  });

  // Image Navigation Functions
  window.setImage = (index) => {
     currentImageIndex = index;
     updateMainImage();
     
     // Update active border on thumbnails
     document.querySelectorAll('.gallery-thumb').forEach((el, idx) => {
        if(idx === index) {
          el.classList.add('border-blue-500', 'shadow-lg', 'shadow-blue-500/20', 'opacity-100');
          el.classList.remove('border-white/10', 'opacity-80');
        } else {
          el.classList.remove('border-blue-500', 'shadow-lg', 'shadow-blue-500/20', 'opacity-100');
          el.classList.add('border-white/10', 'opacity-80');
        }
     });
  };

  window.prevImage = () => {
     currentImageIndex = (currentImageIndex > 0) ? currentImageIndex - 1 : currentImages.length - 1;
     updateMainImage();
  };

  window.nextImage = () => {
     currentImageIndex = (currentImageIndex < currentImages.length - 1) ? currentImageIndex + 1 : 0;
     updateMainImage();
  };

  function updateMainImage() {
     modalMainImage.src = currentImages[currentImageIndex];
  }

  // Close Logic
  function closeModal() {
    modal.classList.add('opacity-0');
    setTimeout(() => {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
    }, 300);
  }

  closeBtn.addEventListener('click', closeModal);
  closeBtnDesktop?.addEventListener('click', closeModal);
  
  // Keyboard Navigation
  document.addEventListener('keydown', (e) => {
    if (!modal.classList.contains('hidden')) {
      if (e.key === 'Escape') closeModal();
      if (e.key === 'ArrowLeft') window.prevImage();
      if (e.key === 'ArrowRight') window.nextImage();
    }
  });
</script>
