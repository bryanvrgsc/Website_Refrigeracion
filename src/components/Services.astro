---
const services = [
  {
    id: 'preventivo',
    title: 'Mantenimiento Preventivo',
    description: 'Limpieza profunda y revisión general para evitar fallas y reducir consumo.',
    icon: 'shield-check',
    color: 'blue',
    details: [
      'Limpieza de serpentines con químicos biodegradables.',
      'Limpieza de charola de condensados y drenaje.',
      'Revisión de amperaje y voltaje en componentes.',
      'Lubricación de motores y rodamientos.',
      'Limpieza de filtros de aire y turbina.',
      'Aplicación de tratamiento antibacterial.'
    ],
    extra: [
      { label: 'Mantenimiento por Contrato', value: 'Planes anuales o semestrales para asegurar la continuidad operativa.' },
      { label: 'Equipos Industriales', value: 'Limpieza y ajuste a Compresores de Tornillo, Scroll y Reciprocantes (Atlas Copco, Kaeser, Gardner Denver, etc.).' },
      { label: 'Climatización', value: 'Revisión general de Chillers, Unidades Paquete, Aire Lavado y Mini Splits.' },
      { label: 'Lubricación', value: 'Cambio de aceites y filtros para equipos lubricados.' }
    ],
    images: [
      "/images/site/Servicios/service-ac-main.jpg",
      "/images/site/Servicios/service-maintenance.jpg",
      "/images/site/Servicios/service-industrial.jpg"
    ],
    delay: '0'
  },
  {
    id: 'reparacion',
    title: 'Reparación de Averías',
    description: 'Diagnóstico preciso y reparación de cualquier tipo de falla técnica.',
    icon: 'wrench',
    color: 'orange',
    details: [
      'Diagnóstico de códigos de error en tarjeta.',
      'Reemplazo de capacitores y contactores.',
      'Cambio de compresores y motores.',
      'Reparación de fugas mediante soldadura.',
      'Corrección de problemas de vibración.'
    ],
    extra: [
      { label: 'Diagnóstico Especializado', value: 'Reparación de compresores que no arrancan, ruidos extraños o baja presión.' },
      { label: 'Marcas que atendemos', value: 'Sullair, Ingersoll-Rand, Chicago Pneumatic, Quincy y más.' },
      { label: 'Reemplazo de partes críticas', value: 'Cambio de contactores, tarjetas electrónicas, sellos y baleros.' },
      { label: 'Atención a Fugas', value: 'Detección y sellado en sistemas de refrigeración y aire comprimido.' }
    ],
    images: [
      "/images/site/Servicios/service-installation.jpg",
      "/images/site/Servicios/service-tech-1.jpg",
      "/images/site/Servicios/service-repair.jpg"
    ],
    delay: '100'
  },
  {
    id: 'venta',
    title: 'Suministro y Venta de Equipos',
    description: 'Venta de equipos de aire acondicionado y refrigeración de las mejores marcas.',
    icon: 'shopping-cart',
    color: 'indigo',
    details: [
      'Equipos Mini Split e Inverter.',
      'Unidades de Paquete y Divididos.',
      'Sistemas de Ventilación Industrial.',
      'Refacciones Originales.',
      'Asesoría técnica en selección de equipo.'
    ],
    extra: [
      { label: 'Venta de Equipos Nuevos', value: 'Compresores Industriales, Secadoras de Aire y Equipos de Aire Acondicionado.' },
      { label: 'Refacciones Originales', value: 'Filtros, bandas, termostatos y aceites especializados.' },
      { label: 'Asesoría Técnica', value: 'Le ayudamos a elegir el caballaje y capacidad correcta para su instalación.' }
    ],
    images: [
      "/images/site/Servicios/service-tools.jpg",
      "/images/site/Servicios/service-pizza.jpg",
      "/images/site/Servicios/service-commercial.jpg"
    ],
    delay: '150'
  },
  {
    id: 'instalacion',
    title: 'Instalación Profesional',
    description: 'Instalación de unidades nuevas con estándares de calidad y seguridad.',
    icon: 'plus-square',
    color: 'green',
    details: [
      'Cálculo térmico para capacidad (BTUs).',
      'Instalación estética de tuberías.',
      'Vacío del sistema con bomba (500 micrones).',
      'Conexión eléctrica normativa.',
      'Pruebas de arranque y capacitación.'
    ],
    extra: [
      { label: 'Sistemas HVAC', value: 'Instalación certificada de Mini Splits, Chillers y Cámaras de Refrigeración/Congelación.' },
      { label: 'Obra Civil Ligera', value: 'Instalación de Plafones (Falsos techos), muros de Tablaroca y adecuación de espacios para los equipos.' },
      { label: 'Ductería y Tubería', value: 'Instalación de líneas de cobre y aislamientos térmicos.' }
    ],
    images: [
      "/images/site/Servicios/service-ventilation.jpg",
      "/images/site/Servicios/service-worker.jpg",
      "/images/site/Servicios/service-hvac.jpg"
    ],
    delay: '200'
  },
  {
    id: 'carga',
    title: 'Carga de Refrigerante',
    description: 'Recarga de gas para recuperar la máxima potencia de enfriamiento.',
    icon: 'droplets',
    color: 'cyan',
    details: [
      'Medición de presiones (Superheat/Subcooling).',
      'Detección de fugas con nitrógeno.',
      'Carga de gas R410A, R22 o R32.',
      'Verificación de temperaturas.',
      'Sellado de válvulas de servicio.'
    ],
    extra: [
      { label: 'Variedad de Gases', value: 'Manejo de R22, R404A, R407C, R410A y refrigerantes especiales.' },
      { label: 'Recuperación Ecológica', value: 'Procesos responsables para evitar daño al medio ambiente.' },
      { label: 'Optimización', value: 'Carga exacta para garantizar la eficiencia energética del equipo (que enfríe bien sin gastar luz de más).' }
    ],
    images: [
      "/images/site/Servicios/service-tech-2.jpg",
      "/images/site/Servicios/service-ac-main.jpg",
      "/images/site/Servicios/service-cooling.jpg"
    ],
    delay: '300'
  },
  {
    id: 'multiservicios',
    title: 'Multiservicios',
    description: 'Soluciones integrales de mantenimiento para la infraestructura de su empresa.',
    icon: 'layers',
    color: 'slate',
    details: [
      'Mantenimiento a subestaciones eléctricas.',
      'Pintura y acabados industriales.',
      'Impermeabilización de naves.',
      'Herrería y estructuras metálicas.',
      'Plomería industrial y comercial.'
    ],
    extra: [
      { label: 'Electricidad Industrial', value: 'Media y baja tensión.' },
      { label: 'Plomería y Fontanería', value: 'Reparación de fugas, bombas y sistemas hidráulicos.' },
      { label: 'Acabados', value: 'Pintura en general, trabajos de Herrería, Aluminio y Carpintería.' },
      { label: 'Solución "Llave en Mano"', value: 'Un solo proveedor para mantener su planta u oficina en perfecto estado.' }
    ],
    images: [
      "/images/site/Servicios/service-electrical.jpg",
      "/images/site/Servicios/service-compressor.jpg",
      "/images/site/Servicios/service-repair.jpg"
    ],
    delay: '350'
  }
];

const colorMap = {
  blue: 'text-blue-600 bg-blue-50 border-blue-600 hover:shadow-blue-500/10',
  orange: 'text-orange-600 bg-orange-50 border-orange-600 hover:shadow-orange-500/10',
  green: 'text-green-600 bg-green-50 border-green-600 hover:shadow-green-500/10',
  cyan: 'text-cyan-600 bg-cyan-50 border-cyan-600 hover:shadow-cyan-500/10',
  indigo: 'text-indigo-600 bg-indigo-50 border-indigo-600 hover:shadow-indigo-500/10',
  slate: 'text-slate-600 bg-slate-50 border-slate-600 hover:shadow-slate-500/10'
} as const;

type ColorKey = keyof typeof colorMap;
---

<section id="servicios" class="py-32 relative overflow-hidden bg-white">
  <div class="absolute inset-0 dot-pattern opacity-30 pointer-events-none"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-20 reveal">
      <div class="inline-block py-1 px-3 rounded-full bg-blue-50 text-blue-600 text-xs font-bold tracking-widest uppercase mb-4 border border-blue-100">
        Excelencia Técnica
      </div>
      <h2 class="text-4xl md:text-6xl font-black text-slate-900 mb-6 tracking-tight">Soluciones <span class="text-gradient">profesionales</span></h2>
      <p class="text-lg md:text-xl text-slate-600 leading-relaxed">Ofrecemos servicios especializados con los más altos estándares de calidad para garantizar el rendimiento óptimo de tus equipos.</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
      {services.map((service, index) => (
        <article 
          class={`relative bg-white p-8 md:p-12 rounded-[2.5rem] shadow-xl hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 border-t border-r border-l border-slate-100 border-b-[12px] ${colorMap[service.color as ColorKey].split(' ').slice(-1)} group reveal reveal-delay-${index * 100} cursor-pointer service-card flex flex-col items-start min-h-[450px] overflow-hidden`}
          data-service={JSON.stringify(service)}
        >
          <!-- Accent Glow -->
          <div class={`absolute -top-12 -right-12 w-40 h-40 rounded-full blur-3xl opacity-10 group-hover:opacity-30 transition-opacity duration-500 ${service.color === 'blue' ? 'bg-blue-400' : service.color === 'orange' ? 'bg-orange-400' : service.color === 'green' ? 'bg-green-400' : service.color === 'indigo' ? 'bg-indigo-400' : service.color === 'slate' ? 'bg-slate-400' : 'bg-cyan-400'}`}></div>
          
          <!-- Icon -->
          <div class={`w-20 h-20 rounded-2xl flex items-center justify-center mb-10 transition-all duration-500 group-hover:scale-110 group-hover:rotate-6 shadow-lg shadow-slate-200 ${colorMap[service.color as ColorKey].split(' ').slice(0, 2).join(' ')}`}>
            {service.icon === 'shield-check' && <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/><path d="m9 12 2 2 4-4"/></svg>}
            {service.icon === 'wrench' && <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>}
            {service.icon === 'shopping-cart' && <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="8" cy="21" r="1"/><circle cx="19" cy="21" r="1"/><path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/></svg>}
            {service.icon === 'plus-square' && <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M8 12h8"/><path d="M12 8v8"/></svg>}
            {service.icon === 'droplets' && <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 16.3c2.2 0 4-1.8 4-4 0-3.3-4-6.3-4-6.3S3 9 3 12.3c0 2.2 1.8 4 4 4z"/><path d="M17 16.3c2.2 0 4-1.8 4-4 0-3.3-4-6.3-4-6.3S13 9 13 12.3c0 2.2 1.8 4 4 4z"/></svg>}
            {service.icon === 'layers' && <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m12.83 2.18a2 2 0 0 0-1.66 0L2.6 6.08a1 1 0 0 0 0 1.83l8.57 3.91a2 2 0 0 0 1.66 0l8.57-3.9a1 1 0 0 0 0-1.83Z"/><path d="m22 17.65-9.17 4.16a2 2 0 0 1-1.66 0L2 17.65"/><path d="m22 12.65-9.17 4.16a2 2 0 0 1-1.66 0L2 12.65"/></svg>}
          </div>
          
          <h3 class="text-3xl font-black text-slate-900 mb-6 group-hover:text-blue-600 transition-colors tracking-tight">{service.title}</h3>
          <p class="text-slate-600 leading-relaxed mb-auto text-lg">
            {service.description}
          </p>
          
          <button class="w-full mt-12 py-5 rounded-2xl font-bold text-base bg-slate-50 text-slate-600 group-hover:bg-blue-600 group-hover:text-white group-hover:shadow-xl group-hover:shadow-blue-500/20 transition-all flex items-center justify-center gap-2 border border-slate-100 group-hover:border-blue-600">
            Ver Galería de Trabajos
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><path d="m9 18 6-6-6-6"/></svg>
          </button>
        </article>
      ))}
    </div>
  </div>

  <!-- Fullscreen Gallery Modal -->
  <div id="service-modal" class="fixed inset-0 z-[100] hidden opacity-0 transition-opacity duration-300" aria-hidden="true">
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-slate-900/60 backdrop-blur-md transition-opacity" id="modal-backdrop"></div>
    
    <!-- Modal Content -->
    <div class="absolute inset-0 flex items-center justify-center p-4 md:p-6">
      <div class="bg-white w-full max-w-6xl max-h-[90vh] md:h-auto rounded-[3rem] shadow-2xl overflow-hidden flex flex-col md:flex-row relative border-t border-r border-l border-slate-100 border-b-[16px] border-blue-600" id="modal-panel">
        
        <!-- Close Button (Absolute for better utility) -->
        <button id="modal-close" class="absolute top-6 right-6 z-50 text-slate-400 hover:text-slate-900 transition-all hover:rotate-90 bg-white/80 backdrop-blur p-2 rounded-xl border border-slate-200 shadow-sm">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="18" x2="6" y1="6" y2="18"/><line x1="6" x2="18" y1="6" y2="18"/></svg>
        </button>

        <!-- Left Column: Visuals (50%) -->
        <div class="w-full md:w-1/2 bg-slate-50 flex flex-col border-r border-slate-100">
          <!-- Main Image Viewport -->
          <div class="flex-1 relative min-h-[300px] md:min-h-[450px] flex items-center justify-center p-8 group/main">
            <div class="absolute inset-0 grid-pattern opacity-20 pointer-events-none"></div>
            
            <!-- Zoom Icon Trigger -->
            <button id="zoom-trigger" class="absolute inset-0 z-20 flex items-center justify-center opacity-0 group-hover/main:opacity-100 transition-opacity bg-slate-900/10 cursor-zoom-in">
              <div class="bg-white/90 p-4 rounded-2xl shadow-2xl scale-90 group-hover/main:scale-100 transition-transform">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="text-blue-600"><circle cx="11" cy="11" r="8"/><line x1="21" x2="16.65" y1="21" y2="16.65"/><line x1="11" x2="11" y1="8" y2="14"/><line x1="8" x2="14" y1="11" y2="11"/></svg>
              </div>
            </button>

            <!-- Image Counter Badge -->
            <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-30 bg-slate-900/80 backdrop-blur-md text-white px-4 py-1.5 rounded-full text-xs font-bold tracking-widest border border-white/10 shadow-lg">
              <span id="modal-counter-current">1</span> / <span id="modal-counter-total">1</span>
            </div>

            <img id="modal-main-image" src="" class="w-full h-full object-contain relative z-10 transition-all duration-500 rounded-2xl" alt="Trabajo realizado" />
            
            <!-- Navigation Arrows -->
            <div class="absolute inset-0 flex items-center justify-between px-4 z-30 pointer-events-none">
              <button class="bg-white/90 hover:bg-blue-600 text-slate-900 hover:text-white p-3 rounded-xl backdrop-blur-sm transition-all border border-slate-200 pointer-events-auto shadow-md group/btn" onclick="prevImage()">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" class="group-hover/btn:-translate-x-0.5 transition-transform"><path d="m15 18-6-6 6-6"/></svg>
              </button>
              <button class="bg-white/90 hover:bg-blue-600 text-slate-900 hover:text-white p-3 rounded-xl backdrop-blur-sm transition-all border border-slate-200 pointer-events-auto shadow-md group/btn" onclick="nextImage()">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" class="group-hover/btn:translate-x-0.5 transition-transform"><path d="m9 18 6-6-6-6"/></svg>
              </button>
            </div>
          </div>

          <!-- Integrated Thumbnails Grid -->
          <div class="p-4 bg-white border-t border-slate-100">
            <div class="grid grid-cols-5 gap-2" id="modal-gallery">
               <!-- Injected via JS -->
            </div>
          </div>
        </div>

        <!-- Right Column: Card Info (50%) -->
        <div class="w-full md:w-1/2 flex flex-col bg-white relative overflow-hidden">
           <!-- Accent Glow (from card) -->
           <div id="modal-accent-glow" class="absolute -top-16 -right-16 w-48 h-48 rounded-full blur-3xl opacity-10 pointer-events-none transition-colors duration-500"></div>

           <div class="flex-1 overflow-y-auto p-8 md:p-12 custom-scrollbar relative z-10">
              <!-- Service Icon (Mirroring Card) -->
              <div id="modal-icon-container" class="w-16 h-16 rounded-2xl flex items-center justify-center mb-8 shadow-lg shadow-slate-100 transition-all duration-500">
                 <!-- Icon Injected via JS -->
              </div>

              <h3 id="modal-title-mobile" class="text-4xl md:text-5xl font-black text-slate-900 tracking-tight leading-[1.1] mb-6"></h3>
              
              <p id="modal-description-mobile" class="text-slate-700 text-xl leading-relaxed mb-10"></p>

              <!-- Extra Info Section (only for some services) -->
              <div id="modal-extra-info" class="mb-10 space-y-6 hidden">
                 <!-- Injected via JS -->
              </div>

              <!-- Technical Specs List -->
              <div class="space-y-6">
                <h4 class="text-blue-600 text-xs font-black uppercase tracking-[0.2em]">Especificaciones Técnicas</h4>
                <ul id="modal-details-list" class="grid gap-4 text-base text-slate-800">
                   <!-- Injected via JS -->
                </ul>
              </div>
           </div>

           <!-- Footer CTA -->
           <div class="p-8 md:p-12 bg-slate-50 border-t border-slate-100 relative z-10">
              <a href="/cotizar" class="flex items-center justify-center gap-3 w-full bg-blue-600 text-white font-black py-5 rounded-2xl text-center hover:bg-blue-700 transition-all shadow-xl shadow-blue-500/20 active:scale-95">
                 COTIZAR ESTE SERVICIO
                 <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
              </a>
           </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Zoom Overlay -->
  <div id="zoom-overlay" class="fixed inset-0 z-[200] hidden opacity-0 transition-opacity duration-300 bg-slate-950/95 flex items-center justify-center p-4 cursor-zoom-out">
    <button id="zoom-close" class="absolute top-8 right-8 text-white/50 hover:text-white transition-colors bg-white/10 p-3 rounded-2xl backdrop-blur-md border border-white/10">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="18" x2="6" y1="6" y2="18"/><line x1="6" x2="18" y1="6" y2="18"/></svg>
    </button>
    <img id="zoom-image" src="" class="max-w-full max-h-full object-contain rounded-xl shadow-2xl" alt="Vista ampliada" />
  </div>
</section>

<script>
  // Elements
  const cards = document.querySelectorAll('.service-card');
  const modal = document.getElementById('service-modal') as HTMLElement;
  const closeBtn = document.getElementById('modal-close') as HTMLElement; 
  
  const modalTitleMobile = document.getElementById('modal-title-mobile') as HTMLElement;
  const modalDescMobile = document.getElementById('modal-description-mobile') as HTMLElement;
  const modalPanel = document.getElementById('modal-panel') as HTMLElement;
  const modalAccentGlow = document.getElementById('modal-accent-glow') as HTMLElement;
  const modalIconContainer = document.getElementById('modal-icon-container') as HTMLElement;
  
  const modalMainImage = document.getElementById('modal-main-image') as HTMLImageElement;
  const modalList = document.getElementById('modal-details-list') as HTMLElement;
  const modalGallery = document.getElementById('modal-gallery') as HTMLElement;
  const modalCounterCurrent = document.getElementById('modal-counter-current') as HTMLElement;
  const modalCounterTotal = document.getElementById('modal-counter-total') as HTMLElement;
  
  const zoomOverlay = document.getElementById('zoom-overlay') as HTMLElement;
  const zoomImage = document.getElementById('zoom-image') as HTMLImageElement;
  const zoomTrigger = document.getElementById('zoom-trigger') as HTMLElement;
  const zoomClose = document.getElementById('zoom-close') as HTMLElement;

  let currentImages: string[] = [];
  let currentImageIndex = 0;

  const colorClasses: Record<string, string> = {
    blue: 'text-blue-600 bg-blue-50',
    orange: 'text-orange-600 bg-orange-50',
    green: 'text-green-600 bg-green-50',
    cyan: 'text-cyan-600 bg-cyan-50',
    indigo: 'text-indigo-600 bg-indigo-50',
    slate: 'text-slate-600 bg-slate-50'
  };

  // Icons mapping
  const icons: Record<string, string> = {
    'shield-check': '<svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/><path d="m9 12 2 2 4-4"/></svg>',
    'wrench': '<svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>',
    'shopping-cart': '<svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="8" cy="21" r="1"/><circle cx="19" cy="21" r="1"/><path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"/></svg>',
    'plus-square': '<svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M8 12h8"/><path d="M12 8v8"/></svg>',
    'droplets': '<svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 16.3c2.2 0 4-1.8 4-4 0-3.3-4-6.3-4-6.3S3 9 3 12.3c0 2.2 1.8 4 4 4z"/><path d="M17 16.3c2.2 0 4-1.8 4-4 0-3.3-4-6.3-4-6.3S13 9 13 12.3c0 2.2 1.8 4 4 4z"/></svg>',
    'layers': '<svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m12.83 2.18a2 2 0 0 0-1.66 0L2.6 6.08a1 1 0 0 0 0 1.83l8.57 3.91a2 2 0 0 0 1.66 0l8.57-3.9a1 1 0 0 0 0-1.83Z"/><path d="m22 17.65-9.17 4.16a2 2 0 0 1-1.66 0L2 17.65"/><path d="m22 12.65-9.17 4.16a2 2 0 0 1-1.66 0L2 12.65"/></svg>'
  };

  // Open Modal
  cards.forEach(card => {
    card.addEventListener('click', () => {
      const dataAttr = card.getAttribute('data-service');
      if (!dataAttr) return;
      
      const data = JSON.parse(dataAttr);
      
      currentImages = data.images;
      currentImageIndex = 0;

      // Populate Data
      modalPanel.style.borderBottomColor = `var(--color-${data.color}-600)`;
      modalAccentGlow.className = `absolute -top-20 -right-20 w-64 h-64 rounded-full blur-3xl opacity-20 pointer-events-none bg-${data.color}-400`;
      modalIconContainer.className = `w-16 h-16 rounded-2xl flex items-center justify-center mb-8 shadow-lg shadow-slate-100 ${colorClasses[data.color]}`;
      modalIconContainer.innerHTML = icons[data.icon];

      modalTitleMobile.innerText = data.title;
      modalDescMobile.innerText = data.description;
      if (modalCounterTotal) modalCounterTotal.innerText = currentImages.length;
      
      // Extra Info
      const extraContainer = document.getElementById('modal-extra-info');
      if (data.extra) {
        extraContainer.innerHTML = data.extra.map(item => `
          <div>
            <h5 class="text-blue-600 font-bold text-sm mb-1">${item.label}</h5>
            <p class="text-slate-600 text-sm leading-relaxed">${item.value}</p>
          </div>
        `).join('');
        extraContainer.classList.remove('hidden');
      } else {
        extraContainer.classList.add('hidden');
      }

      modalGallery.innerHTML = data.images.map((img, idx) => `
        <button onclick="setImage(${idx})" class="aspect-square rounded-xl overflow-hidden border-2 border-slate-100 opacity-50 hover:border-blue-300 transition-all focus:outline-none gallery-thumb group/thumb">
          <img src="${img}" class="w-full h-full object-cover group-hover/thumb:scale-110 transition-transform duration-500" />
        </button>
      `).join('');

      updateMainImage();

      // Details List
      modalList.innerHTML = data.details.map(item => `
        <li class="flex items-center gap-3 text-slate-600">
          <svg class="w-4 h-4 text-blue-600 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg>
          <span class="font-medium">${item}</span>
        </li>
      `).join('');

      modal.classList.remove('hidden');
      setTimeout(() => modal.classList.remove('opacity-0'), 10);
      document.body.style.overflow = 'hidden';
    });
  });

  window.setImage = (index) => {
     currentImageIndex = index;
     updateMainImage();
  };

  window.prevImage = () => {
     currentImageIndex = (currentImageIndex > 0) ? currentImageIndex - 1 : currentImages.length - 1;
     updateMainImage();
  };

  window.nextImage = () => {
     currentImageIndex = (currentImageIndex < currentImages.length - 1) ? currentImageIndex + 1 : 0;
     updateMainImage();
  };

  function updateMainImage() {
     modalMainImage.src = currentImages[currentImageIndex];
     if (modalCounterCurrent) modalCounterCurrent.innerText = currentImageIndex + 1;
     
     document.querySelectorAll('.gallery-thumb').forEach((el, idx) => {
        if(idx === currentImageIndex) {
          el.classList.add('border-blue-500', 'shadow-md', 'scale-105', 'z-10', 'opacity-100');
          el.classList.remove('border-slate-100', 'opacity-50');
        } else {
          el.classList.remove('border-blue-500', 'shadow-md', 'scale-105', 'z-10', 'opacity-100');
          el.classList.add('border-slate-100', 'opacity-50');
        }
     });
  }

  function closeModal() {
    modal.classList.add('opacity-0');
    setTimeout(() => {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
    }, 300);
  }

  closeBtn.addEventListener('click', closeModal);
  
  function openZoom() {
    zoomImage.src = currentImages[currentImageIndex];
    zoomOverlay.classList.remove('hidden');
    setTimeout(() => zoomOverlay.classList.remove('opacity-0'), 10);
  }

  function closeZoom() {
    zoomOverlay.classList.add('opacity-0');
    setTimeout(() => zoomOverlay.classList.add('hidden'), 300);
  }

  zoomTrigger?.addEventListener('click', openZoom);
  zoomOverlay?.addEventListener('click', closeZoom);
  zoomClose?.addEventListener('click', (e) => {
    e.stopPropagation();
    closeZoom();
  });
  
  document.addEventListener('keydown', (e) => {
    if (!zoomOverlay.classList.contains('hidden')) {
      if (e.key === 'Escape') closeZoom();
      return;
    }
    if (!modal.classList.contains('hidden')) {
      if (e.key === 'Escape') closeModal();
      if (e.key === 'ArrowLeft') window.prevImage();
      if (e.key === 'ArrowRight') window.nextImage();
    }
  });
</script>


