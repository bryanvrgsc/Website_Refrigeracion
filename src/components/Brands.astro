---

<section class="py-16 bg-white border-y border-gray-100 overflow-hidden">
  <div class="container mx-auto px-4 mb-10 text-center">
    <p class="text-gray-400 font-bold uppercase tracking-widest text-xs reveal">
      Expertos certificados en las mejores marcas
    </p>
  </div>

  <div class="relative w-full max-w-screen-2xl mx-auto mask-fade">
    <div class="flex w-max animate-marquee">
      {allBrands.map(brand => (
        <div class="flex items-center justify-center mx-8 sm:mx-16 w-32 md:w-48 text-gray-400 hover:text-blue-600 transition-all duration-300 grayscale hover:grayscale-0">
          <div class="w-full h-12 md:h-16 flex items-center justify-center" title={brand.name} set:html={brand.svg} />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .animate-marquee {
    animation: marquee 30s linear infinite;
  }
  
  .animate-marquee:hover {
    animation-play-state: paused;
  }

  .mask-fade {
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
  }
</style>
