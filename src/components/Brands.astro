---
const brands = [
  { name: "Atlas Copco", logo: "/images/brands/AtlasCopco.svg" },
  { name: "Carrier", logo: "/images/brands/Carrier.svg" },
  { name: "Chicago Pneumatic", logo: "/images/brands/ChicagoPneumatic.svg" },
  { name: "Gardner Denver", logo: "/images/brands/GardnerDenver.svg" },
  { name: "Ingersoll Rand", logo: "/images/brands/IngersollRand.svg" },
  { name: "Kaeser Kompressoren", logo: "/images/brands/KaeserKompressoren.svg" },
  { name: "LG", logo: "/images/brands/LG.svg" },
  { name: "McQuay", logo: "/images/brands/McQuay.svg" },
  { name: "Panasonic", logo: "/images/brands/Panasonic.svg" },
  { name: "Quincy Compressor", logo: "/images/brands/QuincyCompressor.svg" },
  { name: "Samsung", logo: "/images/brands/Samsung.svg" },
  { name: "Sullair", logo: "/images/brands/Sullair.svg" },
  { name: "York", logo: "/images/brands/York.svg" },
];

// Duplicate brands for seamless loop
const allBrands = [...brands, ...brands];
---

<section class="py-16 bg-white border-y border-gray-100 overflow-hidden">
  <div class="container mx-auto px-4 mb-10 text-center">
    <p class="text-gray-400 font-bold uppercase tracking-widest text-xs reveal">
      Expertos certificados en las mejores marcas
    </p>
  </div>

  <div class="relative w-full max-w-screen-2xl mx-auto mask-fade">
    <div class="flex w-max animate-marquee">
      {
        allBrands.map((brand) => (
          <div class="brand-item flex items-center justify-center mx-8 sm:mx-12 w-40 sm:w-56 md:w-64 h-20 md:h-24">
            <img
              src={brand.logo}
              alt={brand.name}
              title={brand.name}
              class="max-w-full max-h-full object-contain"
              loading="lazy"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-marquee {
    animation: marquee 35s linear infinite;
  }

  .animate-marquee:hover {
    animation-play-state: paused;
  }

  .mask-fade {
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .brand-item img {
    filter: grayscale(100%);
    opacity: 0.7;
    transition: all 0.3s ease;
  }

  .brand-item:hover img {
    filter: grayscale(0%);
    opacity: 1;
  }
</style>
